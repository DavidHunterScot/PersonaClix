    <section class="packages section">
      <div class="container">
        <a name="packages"></a>
        <h2>Packages</h2>
        <div class="packages">
          {% for package in packages %}
            <div class="package">
              <div class="title">{{ package.title }}</div>
              <div class="description">{{ package.description }}</div>
              
              <div class="promotion">
                <div class="price">{{ package.promotion.price }}</div>
                <div class="text">{{ package.promotion.text }}</div>
              </div>

              <div class="price">Then <b>{{ package.price.amount }}</b> per {{ package.price.frequency }}</div>

              <div class="button order">
                <a href="{{ client_url }}/cart.php?a=add&pid={{ package.cart_pid }}&promocode={{ package.promotion.code }}" target="_blank">Order Now</a>
              </div>

              <div class="specs">
                {% for spec in package.specs %}
                  <div class="spec">
                    <b>{{ spec.value }}</b> {{ spec.name }}
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>
    
