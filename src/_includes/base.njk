    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if description %}<meta name="description" content="{{ description | replace( '{{ site_title }}', site_title ) | replace( '{{ site_tagline }}', site_tagline ) }}">{% endif %}
    
    <title>{% if title %}{{ title }} - {% endif %}{{ site_title }}{% if title %}{% else %} - {{ site_tagline }}{% endif %}</title>
    
    {% include 'stylesheets.njk' %}
  </head>
  
  <body>
    {% include 'header.njk' %}
    
    {% include 'content.njk' %}
    
    {% include 'footer.njk' %}
    
    {% include 'javascripts.njk' %}
  </body>
</html>
