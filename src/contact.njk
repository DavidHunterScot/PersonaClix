---
title: Contact Us
description: No need to be shy, come and say hello.
layout: "base.njk"
hero:
  class: 'contact'
  title: 'Contact Us'
  description: 'Get in touch today!'
---
        
    <section class="contact section">
      <div class="container">
        <div class="methods">
          <div class="method">
            <div class="icon">
              <img src="{{ avatars_url }}/davidhunter_illustration_transparent_1.png" alt="David Hunter Illustration">
            </div>
            
            <div class="button">
              <a href="#" id="email_link">David Hunter</a>
            </div>

            <p id="email_address">david [dot] hunter [at] personaclix [dot] com</p>
          </div>
        </div>
      </div>
    </section>

    <script>
      var email_link = document.getElementById( 'email_link' );
      var email_address = document.getElementById( 'email_address' );

      email_address.innerHTML = email_address.innerHTML.replaceAll( ' [dot] ', '.' ).replaceAll( ' [at] ', '@' );
      email_link.href = "mailto:" + email_address.innerHTML;
      email_link.target = "_blank";
    </script>
